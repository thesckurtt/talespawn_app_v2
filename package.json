{
  "name": "talespawn-app-v2",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "vite": "vite",
    "app": "concurrently -k \"npm:vite\" \"npm:electron\" ",
    "nodemon:app": "nodemon --watch . --ext js --exec \"npm run app\"",
    "build": "vite build",
    "lint": "eslint .",
    "electron": "electron .",
    "preview": "vite preview",
    "knex:migrate:latest": "npx knex migrate:latest --knexfile electron/database/knexfile.cjs",
    "knex:seed:run": "npx knex seed:run --knexfile electron/database/knexfile.cjs",
    "knex:migrate:rollback-all": "npx knex migrate:rollback --all --knexfile electron/database/knexfile.cjs"
  },
  "dependencies": {
    "@google/genai": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0",
    "sqlite3": "^5.1.7",
    "swiper": "^11.2.8",
    "typewriter-effect": "^2.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "electron": "^36.3.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "nodemon": "^3.1.10",
    "vite": "^6.3.5"
  }
}
